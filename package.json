    "chroma-js": "^2.0.4",
    "copy-to-clipboard": "^3.2.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "es6-promise": "^4.2.8",
    "express": "^4.17.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.15",
    "node-vibrant": "^3.2.0-alpha",
    "nuxt": "^2.8.1",
    "unsplash-js": "^5.0.0",
    "vue-masonry-css": "^1.0.3"
  },
  "devDependencies": {
    "@mdi/font": "^3.8.95",
    "@nuxtjs/eslint-config": "^1.0.1",
